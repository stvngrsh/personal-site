<header class="site-header container">

    <a class="header-left button-icon js-theme" href="#" data-system="System theme" data-dark="Dark theme"
        data-light="Light theme">
        <svg class="icon theme-icon-system">
            <use xlink:href="#circle-half-full"></use>
        </svg>
        <svg class="icon theme-icon-dark">
            <use xlink:href="#brightness-2"></use>
        </svg>
        <svg class="icon theme-icon-light">
            <use xlink:href="#white-balance-sunny"></use>
        </svg>
    </a>

    <div class="header-center">
        <a class="logo" href="{{@site.url}}">
            {{#if @site.icon}}
            <img class="logo-image" src="{{@site.icon}}" alt="{{@site.title}}">
            {{else}}
            <span class="logo-text">{{@site.title}}</span>
            {{/if}}
        </a>
    </div>
